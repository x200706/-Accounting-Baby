<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="325dp"
        android:layout_height="340dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/saturn" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="107dp"
        android:layout_height="71dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/block2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="394dp"
        android:layout_height="700dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/block" />


    <TextView
        android:id="@+id/total_money"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="92dp"
        android:text="各月收入"
        android:textColor="@color/string"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_earn"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="116dp"
        android:text="各月現金流"
        android:textColor="@color/string"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_money" />

    <TextView
        android:id="@+id/total_earn2"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="116dp"
        android:text="錢錢去哪兒"
        android:textColor="@color/string"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_earn" />

    <TextView
        android:id="@+id/total_earn3"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="116dp"
        android:text="這東西超花錢"
        android:textColor="@color/string"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_earn2" />

    <TextView
        android:id="@+id/page_title"
        android:layout_width="61dp"
        android:layout_height="40dp"
        android:layout_marginStart="305dp"
        android:layout_marginTop="15dp"
        android:text="分析"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>