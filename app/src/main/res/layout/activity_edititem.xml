<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="325dp"
        android:layout_height="340dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/saturn" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="107dp"
        android:layout_height="71dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/block2" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="394dp"
        android:layout_height="700dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/block" />

    <EditText
        android:id="@+id/input_item_amount"
        android:layout_width="188dp"
        android:layout_height="50dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/total_money5"
        app:layout_constraintTop_toBottomOf="@+id/input_item_date" />

    <TextView
        android:id="@+id/total_money5"
        android:layout_width="52dp"
        android:layout_height="29dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="27dp"
        android:text="金額"
        android:textColor="@color/string"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_money3" />

    <EditText
        android:id="@+id/input_item_tag"
        android:layout_width="188dp"
        android:layout_height="50dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/total_money2"
        app:layout_constraintTop_toBottomOf="@+id/input_item_name" />

    <TextView
        android:id="@+id/total_money3"
        android:layout_width="52dp"
        android:layout_height="29dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="27dp"
        android:text="日期"
        android:textColor="@color/string"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_money2" />

    <TextView
        android:id="@+id/total_money"
        android:layout_width="52dp"
        android:layout_height="29dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="144dp"
        android:text="名目"
        android:textColor="@color/string"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_money4"
        android:layout_width="52dp"
        android:layout_height="29dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="80dp"
        android:text="收入"
        android:textColor="@color/string"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_money2"
        android:layout_width="52dp"
        android:layout_height="29dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="27dp"
        android:text="Tag"
        android:textColor="@color/string"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_money" />

    <Button
        android:id="@+id/another_button"
        android:layout_width="100dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/button3"
        android:text="刪除項目"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_item_amount" />

    <Button
        android:id="@+id/apply_button"
        android:layout_width="100dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="232dp"
        android:background="@drawable/button2"
        android:text="修改項目"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_item_amount" />

    <TextView
        android:id="@+id/page_title"
        android:layout_width="61dp"
        android:layout_height="40dp"
        android:layout_marginStart="305dp"
        android:layout_marginTop="15dp"
        android:text="修改"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_item_name"
        android:layout_width="188dp"
        android:layout_height="50dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/total_money"
        app:layout_constraintTop_toBottomOf="@+id/total_money4" />

    <EditText
        android:id="@+id/input_item_date"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/total_money3"
        app:layout_constraintTop_toBottomOf="@+id/input_item_tag" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/input_item_date"
        app:layout_constraintTop_toBottomOf="@+id/input_item_tag"
        app:srcCompat="@drawable/calendar" />


</android.support.constraint.ConstraintLayout>